                        onClick := '';
                        if (self.domain_id > 0)
                          onClick := sprintf (' onclick="javascript: cNewEvent(event, %d, -1);"', N);
                        http (sprintf ('<td width="%s" class="CE_new CE_cell %s" %s>', '14.2857%', C, onClick));
                        C := '';
                        if (self.cDays[N] > 0)
                          C := C || ' C_onmonth';
                        if (self.cDays[N] < 0)
                          C := C || ' C_offmonth';
                        if (CAL.WA.dt_isWeekDay (dt, self.cWeekStarts)) {
