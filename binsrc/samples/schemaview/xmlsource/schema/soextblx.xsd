<element name='tgroup' type='tbl:tgroup'/>
<element name='colspec' type='tbl:colspec'/>
<element name='thead' type='tbl:thead'/>
<element name='tbody' type='tbl:tbody'/>
<element name='row' type='tbl:row'/>
<element name='entry' type='tbl:entryType'/>

</schema>
