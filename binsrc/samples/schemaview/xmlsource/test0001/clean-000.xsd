<?xml version="1.0"?>
<!DOCTYPE schema SYSTEM "XMLSchema.dtd" [
 <!ENTITY % p "">
 <!ENTITY % s "">
 <!ENTITY % schemaAttrs "
        xmlns:r		CDATA	#IMPLIED
        xmlns:xipo	CDATA	#IMPLIED
 ">
]>	
<schema targetNamespace="http://www.example.com/Report"
        xmlns:r="http://www.example.com/Report"
        xmlns:xipo="http://www.example.com/IPO"
        elementFormDefault="qualified">

<element name="person" type="r:aPerson"/>
	<complexType name="aPerson">
		<sequence>
			<element ref="r:firstName"/>
			<element ref="r:lastName"/>
			<choice>
				<element ref="r:age"/>
				<element ref="r:birthDate"/>
			</choice>
		</sequence>
		<attribute name="status" type="string" use="optional"/>
		<attribute name="chilrens" type="positiveInteger" use="optional"/>
		<attributeGroup ref="r:citizenship"/>
	</complexType>
<attributeGroup name="citizenship">
	<attribute name="country" type="string" use="optional"/>
	<attribute name="cstatus" type="string" use="optional"/>
</attributeGroup>


<element name="manager">
 <complexType>
  <complexContent>
   <extension base="r:aPerson">
	<attribute name="employer" type="string" use="optional"/>
	<attribute name="salary" type="positiveInteger" use="optional"/>
   </extension>
  </complexContent>
 </complexType>
</element>

<element name="report">
	<complexType>
		<choice> 
			<element ref="r:person" minOccurs="1" maxOccurs="unbounded"/>
			<element ref="r:manager" minOccurs="1" maxOccurs="1"/>
		</choice>
	</complexType>
</element>
<element name="firstName" type="string"/>
<element name="lastName" type="string"/>
<element name="age" type="positiveInteger"/>
<element name="birthDate" type="date"/>

</schema>
